@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> Oops! Something went wrong.</h4>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-bug fa-5x text-danger mb-3"></i>
                    <h2 class="text-danger">Error @Model.StatusCode</h2>
                    <p class="lead">We're sorry, but something went wrong on our end.</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-info-circle"></i> Error Details:</h6>
                        <p class="mb-0">@Model.ErrorMessage</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.StackTrace) && User.IsInRole("Administrator"))
                {
                    <div class="mt-4">
                        <h6>Technical Details (Admin Only):</h6>
                        <div class="card">
                            <div class="card-body">
                                <pre class="small text-muted" style="max-height: 200px; overflow-y: auto;">@Model.StackTrace</pre>
                            </div>
                        </div>
                    </div>
                }

                <div class="mt-4">
                    <h6>What you can do:</h6>
                    <ul>
                        <li>Refresh the page and try again</li>
                        <li>Go back to the previous page</li>
                        <li>Return to the dashboard</li>
                        <li>If the problem persists, contact system administrator</li>
                    </ul>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                    <a href="javascript:history.back()" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-arrow-left"></i> Go Back
                    </a>
                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary me-md-2">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                        <i class="fas fa-home"></i> Home Page
                    </a>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted small">
                        If you continue to experience issues, please contact the system administrator at
                        <a href="mailto:support@iie.ac.za">support@iie.ac.za</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>