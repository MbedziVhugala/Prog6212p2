@model Prog6212.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-tachometer-alt"></i> Dashboard
        <small class="text-muted">Welcome, @Model.UserName!</small>
    </h2>
</div>

@if (Model.UserRole == "Lecturer")
{
    <!-- Lecturer Dashboard -->
    <div class="row">
        <!-- Stats Cards -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.Stats.TotalClaims</h4>
                            <p>Total Claims</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-invoice fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.Stats.PendingClaims</h4>
                            <p>Pending</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.Stats.ApprovedClaims</h4>
                            <p>Approved</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>R @Model.Stats.TotalAmountApproved.ToString("N2")</h4>
                            <p>Total Approved</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Claims Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-history"></i> Recent Claims</h5>
            <a href="@Url.Action("Create", "Claim")" class="btn btn-success btn-sm">
                <i class="fas fa-plus"></i> New Claim
            </a>
        </div>
        <div class="card-body">
            @if (Model.RecentClaims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Document</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.RecentClaims)
                            {
                                <tr>
                                    <td>@claim.Id</td>
                                    <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                    <td>R @claim.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(claim.Status)">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (claim.HasDocument)
                                        {
                                            <i class="fas fa-file text-success" title="Document attached"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times text-muted" title="No document"></i>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5>No claims submitted yet</h5>
                    <p class="text-muted">Start by submitting your first monthly claim</p>
                    <a href="@Url.Action("Create", "Claim")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Submit First Claim
                    </a>
                </div>
            }
        </div>
    </div>
}
else
{
    <!-- Coordinator/Manager Dashboard -->
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tasks"></i> Pending Approvals</h5>
                </div>
                <div class="card-body">
                    @if (Model.PendingApprovals.Any())
                    {
                        foreach (var claim in Model.PendingApprovals)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6>Claim #@claim.Id - @claim.LecturerName</h6>
                                            <p class="mb-1">
                                                <strong>Amount:</strong> R @claim.TotalAmount.ToString("N2") |
                                                <strong>Submitted:</strong> @claim.SubmissionDate.ToString("dd/MM/yyyy")
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <a href="@Url.Action("Details", "Approval", new { id = claim.Id })"
                                               class="btn btn-primary btn-sm">
                                                <i class="fas fa-eye"></i> Review
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5>No pending approvals</h5>
                            <p class="text-muted">All claims have been processed</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Stats for Approvers -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Quick Stats</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Total Claims:</strong> @Model.Stats.TotalClaims
                    </div>
                    <div class="mb-3">
                        <strong>Pending:</strong> <span class="badge bg-warning">@Model.Stats.PendingClaims</span>
                    </div>
                    <div class="mb-3">
                        <strong>Approved:</strong> <span class="badge bg-success">@Model.Stats.ApprovedClaims</span>
                    </div>
                    <div class="mb-3">
                        <strong>Rejected:</strong> <span class="badge bg-danger">@Model.Stats.RejectedClaims</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}