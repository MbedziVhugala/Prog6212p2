@model Prog6212.ViewModels.ClaimViewModel

@{
    ViewData["Title"] = "Upload Supporting Document";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-file-upload"></i> Upload Supporting Document</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Claim Information</h6>
                    <p><strong>Claim ID:</strong> #@Model.ClaimId</p>
                    <p><strong>Amount:</strong> R @Model.TotalAmount.ToString("N2")</p>
                    <p><strong>Submitted:</strong> @Model.SubmissionDate.ToString("dd/MM/yyyy")</p>
                </div>

                <form asp-action="Upload" asp-controller="Document" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="ClaimId" value="@Model.ClaimId" />

                    <div class="mb-4">
                        <label for="SupportingDocument" class="form-label fw-bold">Select Document</label>
                        <input type="file" name="SupportingDocument" class="form-control" id="SupportingDocument"
                               accept=".pdf,.docx,.xlsx,.jpg,.png" required />
                        <div class="form-text">
                            <i class="fas fa-info-circle"></i> Supported formats: PDF, DOCX, XLSX, JPG, PNG (Max 10MB)
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Details", "Claim", new { id = Model.ClaimId })" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Back to Claim
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-upload"></i> Upload Document
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
